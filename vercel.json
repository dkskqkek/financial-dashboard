{
  "buildCommand": "rm -rf dist && rm -rf node_modules/.vite && npm run build",
  "outputDirectory": "dist",
  "env": {
    "FORCE_BUILD": "true"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "Pragma", 
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    }
  ]
}
